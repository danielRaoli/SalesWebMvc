@using SalesWebMvc1.Models.Entities
@model IEnumerable<SalesRecord>

@{
    ViewData["title"] = "Simple Search";

}

<h2>@ViewData["title"]</h2>
<nav class="navbar navbar-default">
    <div class="navbar-header">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label class="text-light" for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]"/>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label class="text-light" for="maxDate">Max Date</label>
                        <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]"/>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total Sales = @Model.Sum(o => o.Amount) </h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(s => s.Seller.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(s => s.Seller.Department.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(s => s.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(s => s.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(s => s.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>